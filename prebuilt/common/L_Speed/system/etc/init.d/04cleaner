#!/system/bin/sh

#Interval between cleaner runs,in seconds, 172800=48 hours
RUN_EVERY=172800


LOG=/data/L_Speed/Logs/cleaner.log

busybox rm -f $LOG
busybox touch $LOG

echo "# L Speed Cleaner log" | tee -a $LOG
echo "" | tee -a $LOG
echo "$( date +"%m-%d-%Y %H:%M:%S" ) Cleaner script is running..." | tee -a $LOG;


# cleaner
busybox rm -f /data/anr/*.*
busybox rm -f /data/cache/*.*
busybox rm -f /data/log/*.*
busybox rm -f /data/local/tmp/*.*
busybox rm -f /data/mlog/*
busybox rm -f /data/tombstones/*
busybox rm -f /data/backup/pending/*
busybox rm -f /data/system/dropbox/*
chmod 700 /data/system/dropbox
busybox rm -f /data/system/usagestats/*
busybox chmod 700 /data/system/usagestats

export sampling_rate=10000
export up_threshold=80


echo "memory cleaner--------[OK]" | tee -a $LOG;

if [ -e /data/anr/*.* ]; then
  echo "-anr not cleaned" | tee -a $LOG; else
  echo "-anr cleaned" | tee -a $LOG
fi;
if [ -e /data/local/tmp/*.* ]; then
  echo "-local/tmp not cleaned" | tee -a $LOG; else
  echo "-local/tmp cleaned" | tee -a $LOG
fi;
if [ -e /data/cache/*.* ]; then
  echo "-cache not cleaned" | tee -a $LOG; else
  echo "-cache cleaned" | tee -a $LOG
fi;
if [ -e /data/last_log/*.* ]; then
  echo "-log not cleaned" | tee -a $LOG; else
  echo "-log cleaned" | tee -a $LOG
fi;
if [ -e /data/tombstones/*.* ]; then
  echo "-tombstones not cleaned" | tee -a $LOG; else
  echo "-tombstones cleaned" | tee -a $LOG
fi;


echo "" | tee -a $LOG
echo "$( date +"%m-%d-%Y %H:%M:%S" ) All junk directories are now cleaned,Thanks to -CALIBAN666@XDA-!" | tee -a $LOG;
